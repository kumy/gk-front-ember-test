<div class="panel panel-default">
  <div class="panel-body">
    {{{comment.comment}}}
  </div>
  <div class="panel-footer">
    <div class="pull-left">
      <span class="news-comment-date">{{link-to-user user=comment.author}}</span>
    </div>
    <div class="pull-right">
      <span class="news-comment-date">{{moment-format comment.createdOnDateTime 'MMMM D, YYYY'}}</span>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
